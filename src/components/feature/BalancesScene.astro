<style>
  .glass-card {
    background: rgba(255, 255, 255, 0.72);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.9);
    border-radius: 16px;
    box-shadow:
      0 8px 40px rgba(0, 0, 0, 0.08),
      0 1px 0 rgba(255, 255, 255, 0.8) inset;
  }

  .scene-enter {
    opacity: 0;
    animation: sceneEnter 0.8s ease forwards;
    animation-delay: var(--delay, 0.2s);
  }

  .scene-float {
    animation: sceneEnter 0.8s ease forwards, sceneFloat var(--float-dur, 6s) ease-in-out infinite;
    animation-delay: var(--delay, 0.2s), calc(var(--delay, 0.2s) + 0.8s);
  }

  .balances-scene {
    position: relative;
    min-height: 300px;
  }

  .balances-scene__main {
    padding: 1.25rem 1.5rem;
    max-width: 320px;
  }

  .balances-scene__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 1rem;
  }

  .balances-scene__label {
    font-size: 0.6875rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    color: #6B7280;
  }

  .balances-scene__live {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.6875rem;
    font-weight: 500;
    color: #038458;
  }

  .balances-scene__dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: #038458;
    animation: pulse 2s ease infinite;
  }

  .balances-scene__rows {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .balances-scene__row {
    display: flex;
    align-items: center;
    gap: 0.625rem;
  }

  .balances-scene__flag {
    font-size: 1.25rem;
    flex-shrink: 0;
  }

  .balances-scene__currency {
    flex: 1;
    min-width: 0;
  }

  .balances-scene__code {
    font-size: 0.8125rem;
    font-weight: 600;
    color: #343A40;
    display: block;
    line-height: 1.2;
  }

  .balances-scene__name {
    font-size: 0.625rem;
    color: #9CA3AF;
    display: block;
    line-height: 1.2;
  }

  .balances-scene__amount {
    font-size: 0.8125rem;
    font-weight: 600;
    color: #343A40;
    flex-shrink: 0;
  }

  .balances-scene__disclaimer {
    font-size: 0.625rem;
    color: #9CA3AF;
    margin-top: 0.75rem;
    text-align: right;
    font-style: italic;
  }

  /* Badge cards */
  .balances-scene__badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1rem;
    position: absolute;
    bottom: 20px;
    right: 0;
  }

  .balances-scene__badge-icon {
    width: 20px;
    height: 20px;
    color: #038458;
    flex-shrink: 0;
  }

  .balances-scene__badge-value {
    font-size: 1rem;
    font-weight: 700;
    color: #343A40;
    line-height: 1.2;
  }

  .balances-scene__badge-label {
    font-size: 0.625rem;
    color: #6B7280;
  }

  .balances-scene__savings {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.5rem 0.875rem;
    border-radius: 9999px;
    position: absolute;
    top: 10px;
    right: 0;
  }

  .balances-scene__savings-value {
    font-size: 0.75rem;
    font-weight: 700;
    color: #038458;
  }

  .balances-scene__savings-label {
    font-size: 0.6875rem;
    color: #6B7280;
  }

  @media (max-width: 1023px) {
    .balances-scene {
      min-height: auto;
    }

    .balances-scene__badge,
    .balances-scene__savings {
      position: relative;
      top: auto;
      right: auto;
      bottom: auto;
    }

    .balances-scene {
      display: flex;
      flex-wrap: wrap;
      gap: 0.75rem;
      align-items: flex-start;
    }
  }

  @keyframes sceneEnter {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes sceneFloat {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-8px); }
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.5; transform: scale(1.4); }
  }
</style>
