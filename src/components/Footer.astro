---
const footerColumns = [
  {
    title: 'Advisory',
    links: [
      { label: 'Bank Management', href: '/advisory/bank-management' },
      { label: 'Cash Management', href: '/advisory/cash-management' },
      { label: 'Risk Management', href: '/advisory/risk-management' },
      { label: 'Working Capital', href: '/advisory/working-capital' },
      { label: 'Digitalisation', href: '/advisory/digitalisation' },
    ],
  },
  {
    title: 'Platform',
    links: [
      { label: 'Overview', href: '/platform' },
      { label: 'Payments', href: '/platform/payments' },
      { label: 'Cash Management', href: '/platform/cash-management' },
      { label: 'FX Risk', href: '/platform/fx-risk-management' },
      { label: 'Integrations', href: '/platform/integrations' },
    ],
  },
  {
    title: 'Resources',
    links: [
      { label: 'Blog', href: '/blog' },
      { label: 'FX Academy', href: '/fx-academy' },
      { label: 'Glossary', href: '/glossary' },
      { label: 'Case Studies', href: '/case-studies' },
      { label: 'Webinars', href: '/webinars' },
    ],
  },
  {
    title: 'Company',
    links: [
      { label: 'About', href: '/about' },
      { label: 'Pricing', href: '/pricing' },
      { label: 'Partners', href: '/partners' },
      { label: 'Contact', href: '/contact' },
    ],
  },
];

const legalLinks = [
  { label: 'Terms & Conditions', href: '/legal/terms' },
  { label: 'Privacy Policy', href: '/legal/privacy' },
  { label: 'Cookie Policy', href: '/legal/cookies' },
  { label: 'Complaints Policy', href: '/legal/complaints' },
];
---

<footer class="bg-bg-footer text-white">
  <div class="container-content section-padding">
    <!-- Top Section: Logo + Columns -->
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-8 lg:gap-12">
      <!-- Logo Column -->
      <div class="col-span-2 md:col-span-3 lg:col-span-1 mb-4 lg:mb-0">
        <a href="/" aria-label="HedgeFlows home">
          <img src="/assets/logos/HF-logo-wt.svg" alt="HedgeFlows" class="h-8 w-auto" />
        </a>
        <p class="mt-4 text-small text-white max-w-xs">
          Expert treasury advisory and technology for businesses that trade internationally.
        </p>
        <!-- Social Links -->
        <div class="flex gap-4 mt-6">
          <a href="https://www.linkedin.com/company/hedgeflows" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn" class="text-white hover:text-white transition-colors">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
          <a href="https://www.youtube.com/@hedgeflows" target="_blank" rel="noopener noreferrer" aria-label="YouTube" class="text-white hover:text-white transition-colors">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Link Columns -->
      {footerColumns.map((column) => (
        <div>
          <h3 class="font-semibold text-white mb-4 text-sm uppercase tracking-wider">{column.title}</h3>
          <ul class="space-y-2.5">
            {column.links.map((link) => (
              <li>
                <a href={link.href} class="text-small text-white hover:text-white transition-colors">
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <!-- Regulatory Statement -->
    <div class="mt-12 pt-8 border-t border-white/20">
      <p class="text-small text-white max-w-4xl">
        HedgeFlows Ltd is authorised by the Financial Conduct Authority under the Payment Services Regulations 2017 (Firm Reference Number: 1008699) for the provision of payment services and is registered with the Financial Conduct Authority under the Money Laundering, Terrorist Financing and Transfer of Funds (Information on the Payer) Regulations 2017 for the purpose of money laundering supervision.
      </p>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-8 pt-6 border-t border-white/20 flex flex-col md:flex-row md:items-center md:justify-between gap-4">
      <p class="text-small text-white">
        &copy; {new Date().getFullYear()} HedgeFlows Ltd. All rights reserved.
      </p>
      <nav class="flex flex-wrap gap-x-6 gap-y-2" aria-label="Legal links">
        {legalLinks.map((link) => (
          <a href={link.href} class="text-small text-white hover:text-white transition-colors">
            {link.label}
          </a>
        ))}
      </nav>
    </div>
  </div>
</footer>
