---

<header class="sticky top-0 z-50 bg-white border-b border-border-light">
  <nav class="container-content flex items-center justify-between h-[72px]" aria-label="Main navigation">
    <!-- Logo -->
    <a href="/" class="flex-shrink-0" aria-label="HedgeFlows home">
      <img src="/assets/logos/HF-logo-gr.svg" alt="HedgeFlows" class="h-8 w-auto" />
    </a>

    <!-- Desktop Navigation -->
    <div class="hidden lg:flex items-center gap-0.5">
      {navItems.map((item) =>
        (item.children || item.grouped) ? (
          <div class="mega-trigger relative" data-mega>
            <button
              class="flex items-center gap-1 px-2.5 py-2 text-[0.875rem] font-medium text-text-heading hover:text-brand-green rounded-md transition-colors whitespace-nowrap"
              aria-expanded="false"
              aria-haspopup="true"
            >
              {item.label}
              <svg class="w-3.5 h-3.5 transition-transform mega-chevron" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </button>

            {/* Mega panel — grouped layout (Solutions) */}
            {item.grouped && item.groups ? (
              <div class="mega-panel absolute top-full left-1/2 pt-3 opacity-0 invisible transition-all duration-200 pointer-events-none"
                   style="width: min(calc(100vw - 2rem), 960px); transform: translateX(-50%);">
                <div class="bg-white border border-border-light rounded-xl shadow-[0_8px_30px_rgba(0,0,0,0.08)] p-6">
                  <div class="grid grid-cols-3 gap-8">
                    {item.groups.map((group: any) => (
                      <div>
                        <p class="text-[0.6875rem] font-semibold text-text-muted uppercase tracking-wider mb-3 px-3">{group.heading}</p>
                        <div class="space-y-0.5">
                          {group.items.map((child: any) => (
                            <a
                              href={child.href}
                              class:list={[
                                'group/item flex items-start gap-3 p-3 rounded-lg hover:bg-brand-green-pale transition-colors',
                                { 'bg-brand-green-pale': currentPath === child.href },
                              ]}
                            >
                              <div class="w-9 h-9 rounded-lg bg-[#F8FAFB] group-hover/item:bg-white flex items-center justify-center flex-shrink-0 transition-colors">
                                <svg class="w-[1.125rem] h-[1.125rem] text-brand-green" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                                  <path stroke-linecap="round" stroke-linejoin="round" d={iconPaths[child.icon] || iconPaths['desktop']} />
                                </svg>
                              </div>
                              <div class="min-w-0">
                                <p class:list={[
                                  'text-[0.8125rem] font-semibold text-text-heading group-hover/item:text-brand-green transition-colors leading-snug',
                                  { 'text-brand-green': currentPath === child.href },
                                ]}>
                                  {child.label}
                                </p>
                                <p class="text-[0.75rem] text-text-muted leading-snug mt-0.5">{child.description}</p>
                              </div>
                            </a>
                          ))}
                        </div>
                      </div>
                    ))}
                  </div>
                </div>
              </div>
            ) : (
              /* Mega panel — flat layout (Services, Platform, Resources) */
              <div class="mega-panel absolute top-full left-1/2 pt-3 opacity-0 invisible transition-all duration-200 pointer-events-none"
                   style="width: min(calc(100vw - 2rem), 900px); transform: translateX(-50%);">
                <div class="bg-white border border-border-light rounded-xl shadow-[0_8px_30px_rgba(0,0,0,0.08)] p-6">
                  <div class:list={[
                    'grid gap-1',
                    (item.children?.length || 0) <= 5 ? 'grid-cols-2 lg:grid-cols-3' : 'grid-cols-2 lg:grid-cols-3',
                  ]}>
                    {item.children?.map((child: any) => (
                      <a
                        href={child.href}
                        class:list={[
                          'group/item flex items-start gap-3.5 p-3 rounded-lg hover:bg-brand-green-pale transition-colors',
                          { 'bg-brand-green-pale': currentPath === child.href },
                        ]}
                      >
                        <div class="w-10 h-10 rounded-lg bg-[#F8FAFB] group-hover/item:bg-white flex items-center justify-center flex-shrink-0 transition-colors">
                          <svg class="w-5 h-5 text-brand-green" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                            <path stroke-linecap="round" stroke-linejoin="round" d={iconPaths[child.icon] || iconPaths['desktop']} />
                          </svg>
                        </div>
                        <div class="min-w-0">
                          <p class:list={[
