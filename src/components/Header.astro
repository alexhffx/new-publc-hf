      <!-- Mobile Login -->
      <div class="mt-6 pt-6 border-t border-border-light">
        <a
          href="https://app.hedgeflows.com"
          class="block text-center text-nav text-text-heading hover:text-brand-green transition-colors"
          target="_blank"
          rel="noopener noreferrer"
        >
          Login
        </a>
      </div>
    </div>
  </div>
</header>

<script>
  // ── Mobile menu toggle ──
  const toggle = document.getElementById('mobile-menu-toggle');
  const menu = document.getElementById('mobile-menu');
  const iconOpen = document.getElementById('menu-icon-open');
  const iconClose = document.getElementById('menu-icon-close');

  toggle?.addEventListener('click', () => {
    const isOpen = menu?.classList.contains('hidden');
    menu?.classList.toggle('hidden');
    iconOpen?.classList.toggle('hidden');
    iconClose?.classList.toggle('hidden');
    toggle.setAttribute('aria-expanded', isOpen ? 'true' : 'false');
    toggle.setAttribute('aria-label', isOpen ? 'Close menu' : 'Open menu');
    document.body.style.overflow = isOpen ? 'hidden' : '';
  });

  // ── Mobile accordion ──
  document.querySelectorAll('.mobile-accordion button').forEach((btn) => {
    btn.addEventListener('click', () => {
      const content = btn.nextElementSibling;
      const arrow = btn.querySelector('.accordion-arrow');
      const isOpen = content?.classList.contains('hidden');

      content?.classList.toggle('hidden');
      arrow?.classList.toggle('rotate-180');
      btn.setAttribute('aria-expanded', isOpen ? 'true' : 'false');
    });
  });

  // ── Desktop mega menu hover with delay ──
  let closeTimeout: ReturnType<typeof setTimeout> | null = null;
  let currentOpen: HTMLElement | null = null;

  document.querySelectorAll<HTMLElement>('[data-mega]').forEach((trigger) => {
    const panel = trigger.querySelector<HTMLElement>('.mega-panel');
    const chevron = trigger.querySelector<HTMLElement>('.mega-chevron');
    if (!panel) return;

    function open() {
      if (closeTimeout) {
        clearTimeout(closeTimeout);
        closeTimeout = null;
      }
      // Close any other open panel
      if (currentOpen && currentOpen !== trigger) {
        const otherPanel = currentOpen.querySelector<HTMLElement>('.mega-panel');
        const otherChevron = currentOpen.querySelector<HTMLElement>('.mega-chevron');
        otherPanel?.classList.add('opacity-0', 'invisible', 'pointer-events-none');
        otherPanel?.classList.remove('opacity-100', 'visible', 'pointer-events-auto');
        otherChevron?.classList.remove('rotate-180');
        currentOpen.querySelector('button')?.setAttribute('aria-expanded', 'false');
      }
      panel.classList.remove('opacity-0', 'invisible', 'pointer-events-none');
      panel.classList.add('opacity-100', 'visible', 'pointer-events-auto');
      chevron?.classList.add('rotate-180');
      trigger.querySelector('button')?.setAttribute('aria-expanded', 'true');
      currentOpen = trigger;
    }

    function scheduleClose() {
      closeTimeout = setTimeout(() => {
        panel.classList.add('opacity-0', 'invisible', 'pointer-events-none');
        panel.classList.remove('opacity-100', 'visible', 'pointer-events-auto');
        chevron?.classList.remove('rotate-180');
        trigger.querySelector('button')?.setAttribute('aria-expanded', 'false');
        if (currentOpen === trigger) currentOpen = null;
      }, 150);
    }

    trigger.addEventListener('mouseenter', open);
    trigger.addEventListener('mouseleave', scheduleClose);

    // Keep panel open while cursor is inside it
    panel.addEventListener('mouseenter', () => {
      if (closeTimeout) {
        clearTimeout(closeTimeout);
        closeTimeout = null;
      }
    });
    panel.addEventListener('mouseleave', scheduleClose);
  });
</script>
