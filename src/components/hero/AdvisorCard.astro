---
/**
 * Advisor Message card — communicates the human advisory layer.
 * Shows avatar, name, role, and a short advisory message bubble.
 */
interface Props {
  name?: string;
  role?: string;
  initials?: string;
  message?: string;
  photoUrl?: string;
}

const {
  name = 'Sarah Chen',
  role = 'Treasury Advisor',
  initials = 'SC',
  message = 'Your EUR exposure is up 12% this quarter — let\'s review your hedging strategy.',
  photoUrl,
} = Astro.props;
---

<div class="advisor-card">
  <div class="advisor-card__profile">
    {photoUrl ? (
      <img src={photoUrl} alt={name} class="advisor-card__avatar" />
    ) : (
      <div class="advisor-card__initials">{initials}</div>
    )}
    <div>
      <p class="advisor-card__name">{name}</p>
      <p class="advisor-card__role">{role}</p>
    </div>
  </div>

  <div class="advisor-card__bubble">
    <p>{message}</p>
  </div>
</div>

<style>
  .advisor-card {
    width: 220px;
    padding: 1rem 1.125rem;
    transform: rotate(-1deg);
  }

  .advisor-card__profile {
    display: flex;
    align-items: center;
    gap: 0.625rem;
    margin-bottom: 0.625rem;
  }

  .advisor-card__avatar {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    object-fit: cover;
    flex-shrink: 0;
  }

  .advisor-card__initials {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background: #E8F8F0;
    color: #038458;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.6875rem;
    font-weight: 600;
    flex-shrink: 0;
  }

  .advisor-card__name {
    font-size: 0.75rem;
    font-weight: 600;
    color: #343A40;
    line-height: 1.2;
  }

  .advisor-card__role {
    font-size: 0.625rem;
    color: #6B7280;
    line-height: 1.2;
  }

  .advisor-card__bubble {
    background: #E8F8F0;
    border-radius: 10px;
    padding: 0.625rem 0.75rem;
  }

  .advisor-card__bubble p {
    font-size: 0.6875rem;
    color: #343A40;
    line-height: 1.5;
    margin: 0;
  }
</style>
