---
interface Props {
  quote: string;
  personName: string;
  personRole: string;
  companyName: string;
}

const {
  quote,
  personName,
  personRole,
  companyName,
} = Astro.props;
---

<div class="bg-white p-7 md:p-8 rounded-xl border border-gray-100
            shadow-[0_1px_3px_rgba(0,0,0,0.04),0_6px_24px_rgba(0,0,0,0.04)]
            flex flex-col h-full">
  <!-- Opening quote mark -->
  <div class="mb-4" aria-hidden="true">
    <svg class="w-10 h-10 text-brand-green" viewBox="0 0 40 40" fill="currentColor">
      <path d="M10.3 28.1c-1.4-1-2.5-2.2-3.2-3.5-.7-1.3-1.1-2.8-1.1-4.5 0-2.4.7-4.7 2.1-6.9 1.4-2.2 3.4-3.9 6-5.2l1.5 2.4c-1.7.9-3 2-3.9 3.2-.9 1.2-1.4 2.6-1.5 4.1h3.5c1.4 0 2.5.4 3.2 1.3.8.9 1.1 2 1.1 3.4 0 1.5-.5 2.7-1.4 3.7-.9 1-2.1 1.5-3.5 1.5-1.3 0-2.4-.5-3.3-1.5zm16 0c-1.4-1-2.5-2.2-3.2-3.5-.7-1.3-1.1-2.8-1.1-4.5 0-2.4.7-4.7 2.1-6.9 1.4-2.2 3.4-3.9 6-5.2l1.5 2.4c-1.7.9-3 2-3.9 3.2-.9 1.2-1.4 2.6-1.5 4.1h3.5c1.4 0 2.5.4 3.2 1.3.8.9 1.1 2 1.1 3.4 0 1.5-.5 2.7-1.4 3.7-.9 1-2.1 1.5-3.5 1.5-1.3 0-2.4-.5-3.3-1.5z"/>
    </svg>
  </div>

  <blockquote class="flex-1">
    <p class="text-[1.0625rem] text-text-body leading-relaxed italic">
      {quote}
    </p>
  </blockquote>

  <div class="mt-6 pt-5 border-t border-gray-100 flex items-center gap-3">
    <!-- Avatar placeholder -->
    <div class="w-10 h-10 rounded-full bg-brand-green-pale flex items-center justify-center flex-shrink-0">
      <span class="text-brand-green font-bold text-[0.8125rem]">
        {personName.split(' ').map(n => n[0]).join('').slice(0, 2)}
      </span>
    </div>
    <div>
      <p class="font-semibold text-text-heading text-[0.9375rem]">{personName}</p>
      <p class="text-[0.8125rem] text-text-muted">
        {personRole}, {companyName}
      </p>
    </div>
  </div>
</div>
