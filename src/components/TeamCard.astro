---
interface Props {
  name: string;
  role: string;
  photo?: string;
  background?: string;
  linkedinUrl?: string;
  bio?: any;
}

const {
  name,
  role,
  photo,
  background,
  linkedinUrl,
} = Astro.props;
---

<div class="bg-white p-7 md:p-8 rounded-xl border border-gray-100
            shadow-[0_1px_3px_rgba(0,0,0,0.04),0_6px_24px_rgba(0,0,0,0.04)]
            text-center">
  {/* Photo */}
  {photo ? (
    <img
      src={photo}
      alt={name}
      class="w-32 h-32 rounded-full mx-auto mb-5 object-cover"
      loading="lazy"
    />
  ) : (
    <div class="w-32 h-32 rounded-full mx-auto mb-5 bg-brand-green-pale flex items-center justify-center">
      <span class="text-brand-green font-bold text-[2rem]">
        {name.split(' ').map((n: string) => n[0]).join('').slice(0, 2)}
      </span>
    </div>
  )}

  <h3 class="text-[1.25rem] font-semibold text-text-heading">{name}</h3>

  <p class="text-[0.9375rem] text-brand-green font-medium mt-1">{role}</p>

  {background && (
    <p class="text-[0.875rem] text-text-muted mt-3 leading-relaxed">{background}</p>
  )}

  {linkedinUrl && (
    <a
      href={linkedinUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="inline-flex items-center justify-center mt-4 text-brand-green hover:text-brand-green-dark transition-colors"
      aria-label={`${name} on LinkedIn`}
    >
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
      </svg>
    </a>
  )}
</div>
