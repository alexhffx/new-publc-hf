---
interface Props {
  headline: string;
  primaryCta: {
    label: string;
    href: string;
  };
  secondaryCta?: {
    label: string;
    href: string;
  };
  bgClass?: string;
}

const {
  headline,
  primaryCta,
  secondaryCta,
  bgClass = 'bg-gradient-to-br from-brand-green-pale via-brand-green-pale/60 to-white',
} = Astro.props;
---

<section class:list={[bgClass, 'relative overflow-hidden']}>
  <!-- Subtle decorative pattern -->
  <div class="absolute inset-0 pointer-events-none" aria-hidden="true">
    <div class="absolute -right-10 -top-10 w-64 h-64 bg-brand-green/5 rounded-full blur-3xl"></div>
    <div class="absolute -left-10 -bottom-10 w-48 h-48 bg-brand-green/5 rounded-full blur-3xl"></div>
  </div>

  <div class="container-content relative z-10 py-20 md:py-28 text-center">
    <h2 class="text-[1.75rem] md:text-[2.5rem] font-bold text-text-heading leading-tight max-w-3xl mx-auto">
      {headline}
    </h2>

    <div class="mt-10 flex flex-col sm:flex-row flex-wrap items-center justify-center gap-4">
      <a href={primaryCta.href} class="btn-primary text-[1.0625rem] px-8 py-4">
        {primaryCta.label}
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
        </svg>
      </a>
      {secondaryCta && (
        <a href={secondaryCta.href} class="btn-secondary text-[1.0625rem] px-8 py-4">
          {secondaryCta.label}
        </a>
      )}
    </div>
  </div>
</section>
