---
interface Props {
  title: string;
  description: string;
  href: string;
  icon?: string;
}

const {
  title,
  description,
  href,
  icon,
} = Astro.props;
---

<a
  href={href}
  class="group block bg-white p-7 md:p-8 rounded-xl border border-gray-100
         shadow-[0_1px_3px_rgba(0,0,0,0.04),0_6px_24px_rgba(0,0,0,0.04)]
         hover:shadow-[0_4px_12px_rgba(0,0,0,0.06),0_12px_40px_rgba(0,0,0,0.06)]
         hover:border-brand-green/20
         transition-all duration-300"
>
  <!-- Icon -->
  <div
    class="w-14 h-14 bg-brand-green-pale rounded-2xl flex items-center justify-center mb-5
           group-hover:bg-brand-green group-hover:scale-105 transition-all duration-300"
    aria-hidden="true"
  >
    {icon ? (
      <span class="text-brand-green text-xl group-hover:text-white transition-colors duration-300">{icon}</span>
    ) : (
      <svg class="w-6 h-6 text-brand-green group-hover:text-white transition-colors duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 18L9 11.25l4.306 4.307a11.95 11.95 0 015.814-5.519l2.74-1.22m0 0l-5.94-2.28m5.94 2.28l-2.28 5.941" />
      </svg>
    )}
  </div>

  <h3 class="text-[1.25rem] font-semibold text-text-heading mb-2 group-hover:text-brand-green transition-colors duration-200">
    {title}
  </h3>

  <p class="text-[0.9375rem] text-text-body leading-relaxed mb-5">{description}</p>

  <span class="inline-flex items-center gap-1.5 text-brand-green font-semibold text-[0.9375rem]
               group-hover:gap-2.5 transition-all duration-200">
    Learn more
    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
      <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
    </svg>
  </span>
</a>
