---
import PageLayout from '../../layouts/PageLayout.astro';
import Hero from '../../components/Hero.astro';
import PageSections from '../../components/PageSections.astro';
import CTASection from '../../components/CTASection.astro';
import { getPage } from '../../lib/sanity';

const page = await getPage('industries/e-commerce');
---

<PageLayout
  title={page?.seoTitle || page?.title || 'E-Commerce'}
  description={page?.seoDescription || 'Treasury solutions for international e-commerce businesses.'}
>
  <Hero
    title={page?.heroTitle || 'Treasury solutions for international e-commerce'}
    subtitle={page?.heroSubtitle || 'Manage multi-currency payments, optimise FX costs, and streamline treasury for your online business.'}
    primaryCta={page?.primaryCta}
    secondaryCta={page?.secondaryCta}
  />
  <PageSections sections={page?.sections || []} />
  <CTASection
    headline="Ready to take control of your international finances?"
    primaryCta={{ label: 'Book a Treasury Review', href: '/treasury-health-check' }}
  />
</PageLayout>
