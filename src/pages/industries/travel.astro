---
import PageLayout from '../../layouts/PageLayout.astro';
import Hero from '../../components/Hero.astro';
import PageSections from '../../components/PageSections.astro';
import CTASection from '../../components/CTASection.astro';
import { getPage } from '../../lib/sanity';

const page = await getPage('industries/travel');
---

<PageLayout
  title={page?.seoTitle || page?.title || 'Travel'}
  description={page?.seoDescription || 'Treasury solutions for the travel industry.'}
>
  <Hero
    title={page?.heroTitle || 'Treasury solutions for the travel industry'}
    subtitle={page?.heroSubtitle || 'Handle multi-currency supplier payments, manage seasonal cash flows, and reduce FX risk.'}
    primaryCta={page?.primaryCta}
    secondaryCta={page?.secondaryCta}
  />
  <PageSections sections={page?.sections || []} />
  <CTASection
    headline="Ready to take control of your international finances?"
    primaryCta={{ label: 'Book a Treasury Review', href: '/treasury-health-check' }}
  />
</PageLayout>
