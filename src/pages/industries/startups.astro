---
import PageLayout from '../../layouts/PageLayout.astro';
import Hero from '../../components/Hero.astro';
import PageSections from '../../components/PageSections.astro';
import CTASection from '../../components/CTASection.astro';
import { getPage } from '../../lib/sanity';

const page = await getPage('industries/startups');
---

<PageLayout
  title={page?.seoTitle || page?.title || 'Startups & Scaleups'}
  description={page?.seoDescription || 'Treasury solutions for growing companies trading internationally.'}
>
  <Hero
    title={page?.heroTitle || 'Treasury solutions for growing companies'}
    subtitle={page?.heroSubtitle || 'Build treasury foundations that scale with your business, from seed stage to international expansion.'}
    primaryCta={page?.primaryCta}
    secondaryCta={page?.secondaryCta}
  />
  <PageSections sections={page?.sections || []} />
  <CTASection
    headline="Ready to take control of your international finances?"
    primaryCta={{ label: 'Book a Treasury Review', href: '/treasury-health-check' }}
  />
</PageLayout>
