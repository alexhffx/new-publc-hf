---
import PageLayout from '../../layouts/PageLayout.astro';
import Hero from '../../components/Hero.astro';
import TrustBar from '../../components/TrustBar.astro';
import CTASection from '../../components/CTASection.astro';
import { getLogosByIndustry } from '../../data/clientLogos';
import { xeroStats, getReviewsByTag } from '../../data/xeroReviews';

const industryLogos = getLogosByIndustry('staffing');
const reviews = getReviewsByTag('staffing');

const painPoints = [
  {
    title: 'Fast global payment runs',
    description: 'Approve, pay and auto-reconcile in 35 currencies. Process payroll and contractor payments in one streamlined workflow that saves hours every week.',
    icon: 'M2.25 18.75a60.07 60.07 0 0115.797 2.101c.727.198 1.453-.342 1.453-1.096V18.75M3.75 4.5v.75A.75.75 0 013 6h-.75m0 0v-.375c0-.621.504-1.125 1.125-1.125H20.25M2.25 6v9m18-10.5v.75c0 .414.336.75.75.75h.75m-1.5-1.5h.375c.621 0 1.125.504 1.125 1.125v9.75c0 .621-.504 1.125-1.125 1.125h-.375m1.5-1.5H21a.75.75 0 00-.75.75v.75m0 0H3.75m0 0h-.375a1.125 1.125 0 01-1.125-1.125V15m1.5 1.5v-.75A.75.75 0 003 15h-.75M15 10.5a3 3 0 11-6 0 3 3 0 016 0zm3 0h.008v.008H18V10.5zm-12 0h.008v.008H6V10.5z',
  },
  {
    title: 'Multi-entity cash management',
    description: 'Intuitive dashboards and automated workflows across all your entities and bank accounts. Get real-time visibility to manage working capital effectively.',
    icon: 'M3 13.125C3 12.504 3.504 12 4.125 12h2.25c.621 0 1.125.504 1.125 1.125v6.75C7.5 20.496 6.996 21 6.375 21h-2.25A1.125 1.125 0 013 19.875v-6.75zM9.75 8.625c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125v11.25c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 01-1.125-1.125V8.625zM16.5 4.125c0-.621.504-1.125 1.125-1.125h2.25C20.496 3 21 3.504 21 4.125v15.75c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 01-1.125-1.125V4.125z',
  },
  {
    title: 'Easy currency management',
    description: 'Avoid hidden costs with online tools and expert advice. See your FX exposures early and protect margins on international placements without needing a treasury team.',
    icon: 'M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z',
  },
];

---

<PageLayout
  title="Staffing & Recruitment | HedgeFlows"
  description="Global payments platform for busy staffing and recruitment businesses. Save days with AP automation, global collection accounts and seamless currency management."
>
  <Hero
    title="Prepare, pay & reconcile global payroll in minutes"
    subtitle="Global payments platform for busy staffing and recruitment businesses that saves days with AP automation, global collection accounts and seamless currency management."
    primaryCta={{ label: 'Book a Demo', href: '/treasury-health-check' }}
    secondaryCta={{ label: 'Start Free Trial', href: 'https://app.hedgeflows.com' }}
  />

  {industryLogos.length > 0 && <TrustBar logos={industryLogos} slider={true} />}

  <!-- Pain Points -->
  <section class="section-padding bg-[#F8FAFB]">
    <div class="container-content">
      <div class="text-center mb-14">
        <h2 class="section-heading">Built for international staffing and recruitment</h2>
        <p class="section-subheading mx-auto">Fast payments, clear visibility, protected margins</p>
      </div>
      <div class="grid md:grid-cols-3 gap-8">
        {painPoints.map((s) => (
          <div class="bg-white rounded-2xl border border-gray-100 p-8 shadow-sm">
            <div class="w-12 h-12 rounded-xl bg-brand-green-pale flex items-center justify-center mb-5">
              <svg class="w-6 h-6 text-brand-green" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d={s.icon} />
              </svg>
            </div>
            <h3 class="text-[1.125rem] font-bold text-text-heading mb-3">{s.title}</h3>
            <p class="text-[0.9375rem] text-text-body leading-relaxed">{s.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Features -->
  <section class="section-padding">
    <div class="container-content space-y-24">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <div>
          <p class="text-[0.75rem] font-semibold text-brand-green uppercase tracking-wider mb-3">Global Payments</p>
          <h3 class="text-[1.5rem] md:text-[1.75rem] font-bold text-text-heading mb-4 leading-tight">
            Pay staff and contractors in 30+ currencies
          </h3>
          <p class="text-[0.9375rem] text-text-body leading-relaxed mb-6">
            Process payments 5x faster by auto-syncing from your accounting system. Make same-day payments via SWIFT and local rails, and let auto-reconciliation close the loop back to your ledgers.
          </p>
          <ul class="space-y-3">
            {['Auto-sync invoices and payroll data from your accounting system', 'Same-day payments via SWIFT, SEPA, Faster Payments and local rails', 'Automatic reconciliation back to your ledgers', 'Batch payments for efficient weekly payment runs'].map((item) => (
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-brand-green flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                </svg>
                <span class="text-[0.9375rem] text-text-body">{item}</span>
              </li>
            ))}
          </ul>
        </div>
        <div class="rounded-2xl overflow-hidden">
          <img src="/assets/images/platform/payments-hero.png" alt="Payment automation for staffing businesses" class="w-full h-auto" loading="lazy" />
        </div>
      </div>

      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <div class="order-2 lg:order-1 rounded-2xl overflow-hidden">
          <img src="/assets/images/platform/fx-risk-hero.png" alt="Currency management for recruitment agencies" class="w-full h-auto" loading="lazy" />
        </div>
        <div class="order-1 lg:order-2">
          <p class="text-[0.75rem] font-semibold text-brand-green uppercase tracking-wider mb-3">Currency Management</p>
          <h3 class="text-[1.5rem] md:text-[1.75rem] font-bold text-text-heading mb-4 leading-tight">
            Protect margins from currency costs
          </h3>
          <p class="text-[0.9375rem] text-text-body leading-relaxed mb-6">
            Get real-time visibility into currency exposures through ERP connections. Prebook guaranteed rates for upcoming contractor payments and use our award-winning platform to manage risk proactively.
          </p>
          <ul class="space-y-3">
            {['Real-time visibility through ERP and accounting connections', 'Prebook guaranteed FX rates for upcoming payments', 'Award-winning currency risk management platform', 'Expert support without needing an in-house treasury team'].map((item) => (
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-brand-green flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                </svg>
                <span class="text-[0.9375rem] text-text-body">{item}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Xero Reviews -->
  <section class="section-padding bg-[#F8FAFB]">
    <div class="container-content">
      <div class="text-center mb-14">
        <div class="inline-flex items-center gap-2 bg-white border border-gray-100 rounded-full px-4 py-2 mb-5">
          <div class="flex items-center gap-0.5">
            {[...Array(5)].map(() => (
              <svg class="w-4 h-4 text-amber-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
          </div>
          <span class="text-[0.8125rem] font-semibold text-text-heading">{xeroStats.rating}/5 on Xero App Store</span>
        </div>
        <h2 class="section-heading">Trusted by staffing businesses globally</h2>
      </div>
      <div class="max-w-2xl mx-auto">
        {reviews.map((r) => (
          <div class="bg-white p-8 rounded-2xl border border-gray-100 shadow-sm text-center">
            <div class="flex items-center justify-center gap-0.5 mb-4">
              {[...Array(5)].map(() => (
                <svg class="w-5 h-5 text-amber-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>
            <p class="text-[0.9375rem] text-text-body leading-relaxed mb-6 italic">"{r.quote}"</p>
            <div>
              <p class="font-semibold text-text-heading text-[0.9375rem]">{r.name}</p>
              {(r.role || r.company) && (
                <p class="text-[0.8125rem] text-text-muted">{r.role ? `${r.role}, ${r.company}` : r.company}</p>
              )}
            </div>
          </div>
        ))}
      </div>
      <div class="text-center mt-8">
        <a href={xeroStats.url} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 text-brand-green font-semibold text-[0.875rem] hover:gap-3 transition-all duration-200">
          Read all {xeroStats.totalReviews} reviews on Xero
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5"><path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" /></svg>
        </a>
      </div>
    </div>
  </section>

  <CTASection
    headline="Ready to simplify international payroll?"
    primaryCta={{ label: 'Book a Demo', href: '/treasury-health-check' }}
    secondaryCta={{ label: 'See Pricing', href: '/pricing' }}
  />
</PageLayout>
