---
import PageLayout from '../../layouts/PageLayout.astro';
import Hero from '../../components/Hero.astro';
import PageSections from '../../components/PageSections.astro';
import CTASection from '../../components/CTASection.astro';
import { getPage } from '../../lib/sanity';

const page = await getPage('industries/staffing');
---

<PageLayout
  title={page?.seoTitle || page?.title || 'Staffing & Recruitment'}
  description={page?.seoDescription || 'Treasury solutions for staffing and recruitment agencies.'}
>
  <Hero
    title={page?.heroTitle || 'Treasury solutions for staffing and recruitment'}
    subtitle={page?.heroSubtitle || 'Manage international contractor payments, reduce FX costs, and improve cash flow visibility.'}
    primaryCta={page?.primaryCta}
    secondaryCta={page?.secondaryCta}
  />
  <PageSections sections={page?.sections || []} />
  <CTASection
    headline="Ready to take control of your international finances?"
    primaryCta={{ label: 'Book a Treasury Review', href: '/treasury-health-check' }}
  />
</PageLayout>
