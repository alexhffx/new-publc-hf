---
import PageLayout from '../../layouts/PageLayout.astro';
import Hero from '../../components/Hero.astro';
import PageSections from '../../components/PageSections.astro';
import CTASection from '../../components/CTASection.astro';
import { getPage } from '../../lib/sanity';

const page = await getPage('platform/connected-account');
---

<PageLayout
  title={page?.seoTitle || page?.title || 'Connected Account'}
  description={page?.seoDescription || 'Your multi-currency business account for international trade.'}
>
  <Hero
    title={page?.heroTitle || 'Your multi-currency business account'}
    subtitle={page?.heroSubtitle || 'Hold, send, and receive funds in multiple currencies from a single connected account.'}
    primaryCta={page?.primaryCta}
    secondaryCta={page?.secondaryCta}
  />
  <PageSections sections={page?.sections || []} />
  <CTASection
    headline="Ready to take control of your international finances?"
    primaryCta={{ label: 'Book a Treasury Review', href: '/treasury-health-check' }}
  />
</PageLayout>
