---
import PageLayout from '../../layouts/PageLayout.astro';
import Hero from '../../components/Hero.astro';
import PageSections from '../../components/PageSections.astro';
import CTASection from '../../components/CTASection.astro';
import { getPage } from '../../lib/sanity';

const page = await getPage('platform/cash-management');
---

<PageLayout
  title={page?.seoTitle || page?.title || 'Cash Management Platform'}
  description={page?.seoDescription || 'Real-time cash visibility across all your accounts.'}
>
  <Hero
    title={page?.heroTitle || 'Real-time cash visibility across all your accounts'}
    subtitle={page?.heroSubtitle || 'Monitor balances, forecast cash flows, and optimise liquidity across every currency and account.'}
    primaryCta={page?.primaryCta}
    secondaryCta={page?.secondaryCta}
  />
  <PageSections sections={page?.sections || []} />
  <CTASection
    headline="Ready to take control of your international finances?"
    primaryCta={{ label: 'Book a Treasury Review', href: '/treasury-health-check' }}
  />
</PageLayout>
