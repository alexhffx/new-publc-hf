---
import PageLayout from '../../../layouts/PageLayout.astro';
import Hero from '../../../components/Hero.astro';
import TrustBar from '../../../components/TrustBar.astro';
import CTASection from '../../../components/CTASection.astro';

const accountingIntegrations = [
  {
    name: 'Xero',
    description: 'Multi-currency payments, auto-reconciliation, and FX management. Certified Xero app with 5-star ratings.',
    href: '/platform/integrations/xero',
    category: 'Accounting',
    logo: '/assets/logos/integrations/Xero_software_logo.svg',
  },
  {
    name: 'QuickBooks',
    description: 'Simplify international bill payments with bulk processing and automated bookkeeping for QuickBooks Online.',
    href: '/platform/integrations/quickbooks',
    category: 'Accounting',
    logo: '/assets/logos/integrations/quickbooks-sq.svg',
  },
  {
    name: 'NetSuite',
    description: 'Real-time two-way integration for global payables, vendor payments, and multi-currency cash management.',
    href: '/platform/integrations/netsuite',
    category: 'ERP',
    logo: '/assets/logos/integrations/netsuite-sq.svg',
  },
  {
    name: 'Business Central',
    description: 'Global payments and cash management inside D365 Business Central. Available in Microsoft AppSource.',
    href: '/platform/integrations/business-central',
    category: 'ERP',
    logo: '/assets/logos/integrations/business-central-logo-sq.webp',
  },
];

const comingSoon = [
  { name: 'Sage', category: 'Accounting' },
  { name: 'SAP Business One', category: 'ERP' },
];

const crmIntegrations = [
  {
    name: 'HubSpot',
    description: 'Connect your sales pipeline for early FX exposure visibility. See currency needs before deals close.',
    category: 'CRM',
    logo: '/assets/logos/integrations/Hubspot-sq.png',
  },
  {
    name: 'Salesforce',
    description: 'Integrate your CRM data for real-time pipeline-driven currency forecasting and hedging.',
    category: 'CRM',
    logo: '/assets/logos/integrations/Salesforce_logo.png',
  },
];

const businessTools = [
  { name: 'Shopify', description: 'Manage multi-currency e-commerce revenue streams.', logo: '/assets/logos/integrations/shopify-sq.svg' },
  { name: 'Zapier', description: 'Connect HedgeFlows to 5,000+ apps with automated workflows.', logo: '/assets/logos/integrations/zapier-sq.svg' },
  { name: 'Slack', description: 'Get payment and FX alerts directly in your Slack channels.', logo: '/assets/logos/integrations/slack-sq.jpg' },
  { name: 'Excel', description: 'Export and import data for custom reporting and analysis.', logo: '/assets/logos/integrations/Excel-sq.png' },
];

const bankFeatures = [
  'Connect via Open Banking for real-time balance visibility',
  'Aggregate balances across all banks and currencies',
  'Automated bank feed reconciliation',
  'Support for multi-entity, multi-bank structures',
];

const iconPath = 'M13.19 8.688a4.5 4.5 0 011.242 7.244l-4.5 4.5a4.5 4.5 0 01-6.364-6.364l1.757-1.757m13.35-.622l1.757-1.757a4.5 4.5 0 00-6.364-6.364l-4.5 4.5a4.5 4.5 0 001.242 7.244';
---

<PageLayout
  title="Integrations | HedgeFlows"
  description="Connect your Xero, NetSuite, QuickBooks, or Business Central in minutes. Plus 2,000+ international bank connections via Open Banking."
>
  <!-- Hero -->
  <Hero
    title="Don't change a thing. Just connect."
    subtitle="Connect in minutes, not weeks, with off-the-shelf integrations to your existing accounting software, ERPs, CRMs, and 2,000+ international banks."
    primaryCta={{ label: 'Start Free Trial', href: 'https://app.hedgeflows.com' }}
    secondaryCta={{ label: 'Book a Demo', href: '/treasury-health-check' }}
  />

  <!-- Trust Bar -->
  <TrustBar />

  <!-- Accounting & ERP Integrations -->
  <section class="section-padding bg-[#F8FAFB]">
    <div class="container-content">
      <div class="text-center mb-14">
        <h2 class="section-heading">Accounting & ERP</h2>
        <p class="section-subheading mx-auto">
          Two-way integrations that sync invoices, payments, and reconciliations in real time.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-6 max-w-4xl mx-auto">
        {accountingIntegrations.map((i) => (
          <a
            href={i.href}
            class="group bg-white rounded-2xl border border-gray-100 p-8
                   shadow-sm hover:shadow-md hover:border-brand-green/20 transition-all duration-200 flex flex-col"
          >
            <div class="flex items-center gap-4 mb-4">
              <div class="w-12 h-12 rounded-xl bg-white flex items-center justify-center flex-shrink-0">
                <img src={i.logo} alt={i.name} class="w-10 h-10 object-contain" loading="lazy" />
              </div>
              <div>
                <h3 class="text-[1.125rem] font-bold text-text-heading group-hover:text-brand-green transition-colors">{i.name}</h3>
                <span class="text-[0.75rem] text-text-muted font-medium">{i.category}</span>
              </div>
            </div>
            <p class="text-[0.9375rem] text-text-body leading-relaxed flex-1">{i.description}</p>
            <span class="inline-flex items-center gap-1.5 text-brand-green font-semibold text-[0.875rem] mt-4 group-hover:gap-2.5 transition-all duration-200">
              Learn more
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </span>
          </a>
        ))}
      </div>

      {comingSoon.length > 0 && (
        <div class="mt-8 text-center">
          <p class="text-[0.875rem] text-text-muted">
            Coming soon: {comingSoon.map(c => c.name).join(', ')}
          </p>
        </div>
      )}
    </div>
  </section>

  <!-- CRM Integrations -->
  <section class="section-padding bg-white">
    <div class="container-content">
      <div class="text-center mb-14">
        <h2 class="section-heading">CRM & Sales</h2>
        <p class="section-subheading mx-auto">
          Connect your sales pipeline for early visibility into currency exposures — before deals even close.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-6 max-w-3xl mx-auto">
        {crmIntegrations.map((i) => (
          <div class="bg-white rounded-2xl border border-gray-100 p-8 shadow-sm">
            <div class="flex items-center gap-4 mb-4">
              <div class="w-12 h-12 rounded-xl bg-white flex items-center justify-center flex-shrink-0">
                <img src={i.logo} alt={i.name} class="w-10 h-10 object-contain" loading="lazy" />
              </div>
              <div>
                <h3 class="text-[1.125rem] font-bold text-text-heading">{i.name}</h3>
                <span class="text-[0.75rem] text-text-muted font-medium">{i.category}</span>
              </div>
            </div>
            <p class="text-[0.9375rem] text-text-body leading-relaxed">{i.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Business Tools -->
  <section class="section-padding bg-[#F8FAFB]">
    <div class="container-content">
      <div class="text-center mb-14">
        <h2 class="section-heading">Business Tools</h2>
        <p class="section-subheading mx-auto">
          Extend HedgeFlows into your wider business workflow.
        </p>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 max-w-3xl mx-auto">
        {businessTools.map((t) => (
          <div class="bg-white rounded-xl border border-gray-100 p-5 text-center shadow-sm">
            <div class="w-10 h-10 rounded-lg flex items-center justify-center mx-auto mb-3">
              <img src={t.logo} alt={t.name} class="w-10 h-10 object-contain" loading="lazy" />
            </div>
            <p class="text-[0.875rem] font-semibold text-text-heading mb-1">{t.name}</p>
            <p class="text-[0.75rem] text-text-muted leading-relaxed">{t.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Bank Connections -->
  <section class="section-padding bg-white">
    <div class="container-content">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <div>
          <p class="text-[0.75rem] font-semibold text-brand-green uppercase tracking-wider mb-3">Open Banking</p>
          <h2 class="text-[1.5rem] md:text-[1.75rem] font-bold text-text-heading mb-4 leading-tight">
            2,000+ international bank connections
          </h2>
          <p class="text-[0.9375rem] text-text-body leading-relaxed mb-6">
            Connect your bank accounts via Open Banking for real-time visibility into balances and transactions. Works with major banks including Barclays, NatWest, Santander, Revolut, and Wise — plus thousands more worldwide.
          </p>
          <ul class="space-y-3">
            {bankFeatures.map((item) => (
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-brand-green flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                </svg>
                <span class="text-[0.9375rem] text-text-body">{item}</span>
              </li>
            ))}
          </ul>
        </div>
        <div class="rounded-2xl overflow-hidden">
          <img
            src="/assets/images/platform/bank-balances.jpg"
            alt="Connected bank account balances across multiple banks"
            class="w-full h-auto"
            loading="lazy"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Setup Speed -->
  <section class="section-padding-sm bg-[#F8FAFB] border-y border-gray-100">
    <div class="container-content">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
        <div>
          <p class="text-[2rem] font-bold text-brand-green">3 min</p>
          <p class="text-[0.875rem] text-text-muted font-medium">To connect your accounting</p>
        </div>
        <div>
          <p class="text-[2rem] font-bold text-brand-green">0</p>
          <p class="text-[0.875rem] text-text-muted font-medium">IT resources needed</p>
        </div>
        <div>
          <p class="text-[2rem] font-bold text-brand-green">2,000+</p>
          <p class="text-[0.875rem] text-text-muted font-medium">Banks connected</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <CTASection
    headline="Ready to connect your systems and automate your treasury?"
    primaryCta={{ label: 'Start Free Trial', href: 'https://app.hedgeflows.com' }}
    secondaryCta={{ label: 'Book a Demo', href: '/treasury-health-check' }}
  />
</PageLayout>
