---
import PageLayout from '../../layouts/PageLayout.astro';
import Hero from '../../components/Hero.astro';
import TrustBar from '../../components/TrustBar.astro';
import CTASection from '../../components/CTASection.astro';

const painPoints = [
  {
    title: 'Flexible integrations',
    description: 'Support clients regardless of accounting system — Xero, QuickBooks, NetSuite, Business Central, Sage. Connect in minutes.',
    icon: 'M13.5 16.875h3.375m0 0h3.375m-3.375 0V13.5m0 3.375v3.375M6 10.5h2.25a2.25 2.25 0 002.25-2.25V6a2.25 2.25 0 00-2.25-2.25H6A2.25 2.25 0 003.75 6v2.25A2.25 2.25 0 006 10.5zm0 9.75h2.25A2.25 2.25 0 0010.5 18v-2.25a2.25 2.25 0 00-2.25-2.25H6a2.25 2.25 0 00-2.25 2.25V18A2.25 2.25 0 006 20.25zm9.75-9.75H18a2.25 2.25 0 002.25-2.25V6A2.25 2.25 0 0018 3.75h-2.25A2.25 2.25 0 0013.5 6v2.25a2.25 2.25 0 002.25 2.25z',
  },
  {
    title: 'Intuitive workflows',
    description: 'Domestic or foreign invoices, same easy process. 5-step flow: sync, review, schedule, fund, pay & reconcile.',
    icon: 'M3.75 12h16.5m-16.5 3.75h16.5M3.75 19.5h16.5M5.625 4.5h12.75a1.875 1.875 0 010 3.75H5.625a1.875 1.875 0 010-3.75z',
  },
  {
    title: 'Security & controls',
    description: 'Fast payments without compromising governance. 2FA, role-based access, multi-level approvals, audit trail, Confirmation of Payee, fraud detection.',
    icon: 'M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z',
  },
];
---

<PageLayout
  title="Accountants | HedgeFlows"
  description="AP automation for global managed services. Delight your clients with modern payment solutions — global payables accelerated with control and confidence."
>
  <Hero
    title="AP automation for global managed services"
    subtitle="Delight your clients with modern service and deliver accessible payment solutions with no compromises. Global payables accelerated, with control and confidence."
    primaryCta={{ label: 'Book a Demo', href: '/treasury-health-check' }}
    secondaryCta={{ label: 'Contact Us', href: '/contact' }}
  />

  <TrustBar />

  <!-- Pain Points -->
  <section class="section-padding bg-[#F8FAFB]">
    <div class="container-content">
      <div class="text-center mb-14">
        <h2 class="section-heading">Designed for accounting firms</h2>
        <p class="section-subheading mx-auto">Everything you need to manage global payables for your clients</p>
      </div>
      <div class="grid md:grid-cols-3 gap-8">
        {painPoints.map((s) => (
          <div class="bg-white rounded-2xl border border-gray-100 p-8 shadow-sm">
            <div class="w-12 h-12 rounded-xl bg-brand-green-pale flex items-center justify-center mb-5">
              <svg class="w-6 h-6 text-brand-green" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d={s.icon} />
              </svg>
            </div>
            <h3 class="text-[1.125rem] font-bold text-text-heading mb-3">{s.title}</h3>
            <p class="text-[0.9375rem] text-text-body leading-relaxed">{s.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Features -->
  <section class="section-padding">
    <div class="container-content space-y-24">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <div>
          <p class="text-[0.75rem] font-semibold text-brand-green uppercase tracking-wider mb-3">Global Payments</p>
          <h3 class="text-[1.5rem] md:text-[1.75rem] font-bold text-text-heading mb-4 leading-tight">
            Save time and money on global payables
          </h3>
          <p class="text-[0.9375rem] text-text-body leading-relaxed mb-6">
            Client accounts in 35 currencies, complimentary local payments in 30 currencies, low-cost SWIFT from &pound;5, 0.25% FX conversion, same-day payments, automated remittance emails. Saving clients up to 80% vs banks.
          </p>
          <ul class="space-y-3">
            {['Client accounts in 35 currencies', 'Complimentary local payments in 30 currencies', 'Low-cost SWIFT transfers from £5', 'Same-day payments with automated remittance emails'].map((item) => (
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-brand-green flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                </svg>
                <span class="text-[0.9375rem] text-text-body">{item}</span>
              </li>
            ))}
          </ul>
        </div>
        <div class="rounded-2xl overflow-hidden">
          <img src="/assets/images/platform/payments-hero.png" alt="Global payment processing for accountants" class="w-full h-auto" loading="lazy" />
        </div>
      </div>

      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <div class="order-2 lg:order-1 rounded-2xl overflow-hidden">
          <img src="/assets/images/platform/cashflow-plan.png" alt="Partner programme benefits" class="w-full h-auto" loading="lazy" />
        </div>
        <div class="order-1 lg:order-2">
          <p class="text-[0.75rem] font-semibold text-brand-green uppercase tracking-wider mb-3">Partner Programme</p>
          <h3 class="text-[1.5rem] md:text-[1.75rem] font-bold text-text-heading mb-4 leading-tight">
            Partnering to support international growth
          </h3>
          <p class="text-[0.9375rem] text-text-body leading-relaxed mb-6">
            Modular financial automation for clients growing internationally. Access dedicated resources and rewards designed to help your practice and your clients succeed.
          </p>
          <ul class="space-y-3">
            {['Client pricing access with transparent rates', 'Comprehensive training & resources', 'Subscription discounts for your firm and clients'].map((item) => (
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-brand-green flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                </svg>
                <span class="text-[0.9375rem] text-text-body">{item}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </section>

  <CTASection
    headline="Ready to offer your clients better international payments?"
    primaryCta={{ label: 'Book a Demo', href: '/treasury-health-check' }}
    secondaryCta={{ label: 'Contact Us', href: '/contact' }}
  />
</PageLayout>
