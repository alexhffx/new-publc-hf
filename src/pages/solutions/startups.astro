---
import PageLayout from '../../layouts/PageLayout.astro';
import Hero from '../../components/Hero.astro';
import SolutionsScene from '../../components/hero/SolutionsScene.astro';
import TrustBar from '../../components/TrustBar.astro';
import CTASection from '../../components/CTASection.astro';

const painPoints = [
  {
    title: 'One global business account',
    description: 'Your own IBAN and local bank details in 35+ currencies. Pay suppliers, contractors, and staff worldwide — and collect from global clients — all from one place.',
    icon: 'M2.25 18.75a60.07 60.07 0 0115.797 2.101c.727.198 1.453-.342 1.453-1.096V18.75M3.75 4.5v.75A.75.75 0 013 6h-.75m0 0v-.375c0-.621.504-1.125 1.125-1.125H20.25M2.25 6v9m18-10.5v.75c0 .414.336.75.75.75h.75m-1.5-1.5h.375c.621 0 1.125.504 1.125 1.125v9.75c0 .621-.504 1.125-1.125 1.125h-.375m1.5-1.5H21a.75.75 0 00-.75.75v.75m0 0H3.75m0 0h-.375a1.125 1.125 0 01-1.125-1.125V15m1.5 1.5v-.75A.75.75 0 003 15h-.75M15 10.5a3 3 0 11-6 0 3 3 0 016 0zm3 0h.008v.008H18V10.5zm-12 0h.008v.008H6V10.5z',
  },
  {
    title: 'Simple currency management',
    description: 'See your FX exposure at a glance and lock in rates when it suits you. No complexity, no jargon — just clear visibility so you know what you\'re paying.',
    icon: 'M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z',
  },
  {
    title: 'Automated bookkeeping',
    description: 'Invoices sync automatically from Xero or QuickBooks. Payments reconcile back to your ledger. Spend minutes, not days, on international finance admin.',
    icon: 'M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z',
  },
];

const testimonials = [
  {
    quote: 'HedgeFlows has made making non-GBP payments simpler and cheaper to do! It also helps recognise where we are exposed as a business to FX rates.',
    name: 'Ben',
    role: 'Finance Director',
    company: 'Champo',
  },
  {
    quote: 'Hedgeflows offer better exchange rates than our bank, excellent client-focused service, and plenty of data to make better currency decisions.',
    name: 'Stephanie',
    role: 'Finance Director',
    company: 'Belo FX',
  },
];
---

<PageLayout
  title="Treasury for Startups & Small Businesses | HedgeFlows"
  description="Global business account and simple currency management for startups and small businesses that trade internationally. Pay, collect, and manage FX — all in one place."
>
  <Hero
    title="Global payments and currency management, simplified"
    subtitle="A global business account, market-leading FX rates, and simple currency tools — everything a startup or small business needs to trade internationally without the complexity."
    primaryCta={{ label: 'Book a Demo', href: '/treasury-health-check' }}
    secondaryCta={{ label: 'Start Free Trial', href: 'https://app.hedgeflows.com/signup' }}
  >
    <SolutionsScene slot="scene" tier="startup" />
  </Hero>

  <TrustBar slider={true} />

  <!-- Pain Points -->
  <section class="section-padding bg-[#F8FAFB]">
    <div class="container-content">
      <div class="text-center mb-14">
        <h2 class="section-heading">Everything you need to trade globally</h2>
        <p class="section-subheading mx-auto">Stop juggling banks, brokers, and spreadsheets</p>
      </div>
      <div class="grid md:grid-cols-3 gap-8">
        {painPoints.map((s) => (
          <div class="bg-white rounded-2xl border border-gray-100 p-8 shadow-sm">
            <div class="w-12 h-12 rounded-xl bg-brand-green-pale flex items-center justify-center mb-5">
              <svg class="w-6 h-6 text-brand-green" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d={s.icon} />
              </svg>
            </div>
            <h3 class="text-[1.125rem] font-bold text-text-heading mb-3">{s.title}</h3>
            <p class="text-[0.9375rem] text-text-body leading-relaxed">{s.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Features -->
  <section class="section-padding">
    <div class="container-content space-y-24">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <div>
          <p class="text-[0.75rem] font-semibold text-brand-green uppercase tracking-wider mb-3">Global Business Account</p>
          <h3 class="text-[1.5rem] md:text-[1.75rem] font-bold text-text-heading mb-4 leading-tight">
            Pay and get paid like a local in 35+ currencies
          </h3>
          <p class="text-[0.9375rem] text-text-body leading-relaxed mb-6">
            Your own IBAN and local bank details around the globe. Pay vendors, staff, and freelancers. Collect from global B2B clients. Save time with unique bookkeeping automation that removes the complexity of dealing in multiple currencies.
          </p>
          <ul class="space-y-3">
            {['Same-day payments via SWIFT, SEPA, Faster Payments, and ACH', 'Automatic invoice sync from your accounting system', 'Auto-reconciliation back to your ledgers', 'Market-leading FX rates from 0.25%'].map((item) => (
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-brand-green flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                </svg>
                <span class="text-[0.9375rem] text-text-body">{item}</span>
              </li>
            ))}
          </ul>
        </div>
        <div class="rounded-2xl overflow-hidden">
          <img src="/assets/images/platform/payments-hero.png" alt="Multi-currency payment processing" class="w-full h-auto" loading="lazy" />
        </div>
      </div>

      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <div class="order-2 lg:order-1 rounded-2xl overflow-hidden">
          <img src="/assets/images/platform/fx-risk-hero.png" alt="Simple currency management dashboard" class="w-full h-auto" loading="lazy" />
        </div>
        <div class="order-1 lg:order-2">
          <p class="text-[0.75rem] font-semibold text-brand-green uppercase tracking-wider mb-3">Simple Currency Management</p>
          <h3 class="text-[1.5rem] md:text-[1.75rem] font-bold text-text-heading mb-4 leading-tight">
            See your FX exposure and lock in rates with confidence
          </h3>
          <p class="text-[0.9375rem] text-text-body leading-relaxed mb-6">
            Know exactly where you're exposed to currency moves. Book rates when they're right for you, with transparent pricing and no hidden margins. Simple tools that give you control without needing an FX expert on staff.
          </p>
          <ul class="space-y-3">
            {['Clear view of your currency exposure by invoice', 'Lock in rates with forward contracts', 'Transparent FX pricing — see the mid-rate and our spread', 'No minimum volumes or lock-in contracts'].map((item) => (
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-brand-green flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                </svg>
                <span class="text-[0.9375rem] text-text-body">{item}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <section class="section-padding bg-[#F8FAFB]">
    <div class="container-content">
      <div class="text-center mb-14">
        <h2 class="section-heading">Trusted by growing businesses worldwide</h2>
      </div>
      <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        {testimonials.map((t) => (
          <div class="bg-white p-8 rounded-2xl border border-gray-100 shadow-sm">
            <svg class="w-8 h-8 text-brand-green/20 mb-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10H14.017zM0 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151C7.546 6.068 5.983 8.789 5.983 11H10v10H0z"/>
            </svg>
            <p class="text-[0.9375rem] text-text-body leading-relaxed mb-4 italic">"{t.quote}"</p>
            <div>
              <p class="font-semibold text-text-heading text-[0.9375rem]">{t.name}</p>
              <p class="text-[0.8125rem] text-text-muted">{t.role}, {t.company}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Startup Program -->
  <section class="section-padding">
    <div class="container-content max-w-3xl mx-auto text-center">
      <div class="bg-gradient-to-br from-brand-green-pale via-brand-green-pale/60 to-white rounded-3xl p-10 md:p-14 border border-brand-green/10">
        <h2 class="text-[1.5rem] md:text-[2rem] font-bold text-text-heading mb-4">Apply for our startup programme</h2>
        <p class="text-[1.0625rem] text-text-body leading-relaxed mb-6">
          HedgeFlows for Startups is open to businesses less than 5 years old. Enjoy extended subscription discounts, exclusive events, and expert access — essential benefits for growing businesses.
        </p>
        <a href="/treasury-health-check" class="btn-primary text-[1.0625rem] px-8 py-4">
          Apply Now
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
      </div>
    </div>
  </section>

  <CTASection
    headline="Ready to simplify your international finances?"
    primaryCta={{ label: 'Book a Demo', href: '/treasury-health-check' }}
    secondaryCta={{ label: 'See Pricing', href: '/pricing' }}
  />
</PageLayout>
