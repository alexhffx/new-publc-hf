---
import PageLayout from '../../layouts/PageLayout.astro';
import Hero from '../../components/Hero.astro';
import SolutionsScene from '../../components/hero/SolutionsScene.astro';
import TrustBar from '../../components/TrustBar.astro';
import CTASection from '../../components/CTASection.astro';

const painPoints = [
  {
    title: 'Treasury strategy & governance',
    description: 'We design your treasury policies, risk frameworks, and governance structures — so your board and auditors have confidence in how you manage international finances.',
    icon: 'M4.26 10.147a60.436 60.436 0 00-.491 6.347A48.627 48.627 0 0112 20.904a48.627 48.627 0 018.232-4.41 60.46 60.46 0 00-.491-6.347m-15.482 0a50.57 50.57 0 00-2.658-.813A59.905 59.905 0 0112 3.493a59.902 59.902 0 0110.399 5.84c-.896.248-1.783.52-2.658.814m-15.482 0A50.697 50.697 0 0112 13.489a50.702 50.702 0 017.74-3.342M6.75 15a.75.75 0 100-1.5.75.75 0 000 1.5zm0 0v-3.675A55.378 55.378 0 0112 8.443m-7.007 11.55A5.981 5.981 0 006.75 15.75v-1.5',
  },
  {
    title: 'Banking & working capital',
    description: 'We review your banking relationships, negotiate better terms, and source working capital solutions — from trade finance to supply chain financing — to improve your cash conversion cycle.',
    icon: 'M2.25 21h19.5m-18-18v18m10.5-18v18m6-13.5V21M6.75 6.75h.75m-.75 3h.75m-.75 3h.75m3-6h.75m-.75 3h.75m-.75 3h.75M6.75 21v-3.375c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21M3 3h12m-.75 4.5H21m-3.75 3H21m-3.75 3H21',
  },
  {
    title: 'Full treasury technology',
    description: 'Our TMS handles the execution — hedge accounting, custom ERP integrations, working capital management, and comprehensive reporting across your entire organisation.',
    icon: 'M9.594 3.94c.09-.542.56-.94 1.11-.94h2.593c.55 0 1.02.398 1.11.94l.213 1.281c.063.374.313.686.645.87.074.04.147.083.22.127.324.196.72.257 1.075.124l1.217-.456a1.125 1.125 0 011.37.49l1.296 2.247a1.125 1.125 0 01-.26 1.431l-1.003.827c-.293.24-.438.613-.431.992a6.759 6.759 0 010 .255c-.007.378.138.75.43.99l1.005.828c.424.35.534.954.26 1.43l-1.298 2.247a1.125 1.125 0 01-1.369.491l-1.217-.456c-.355-.133-.75-.072-1.076.124a6.57 6.57 0 01-.22.128c-.331.183-.581.495-.644.869l-.213 1.28c-.09.543-.56.941-1.11.941h-2.594c-.55 0-1.02-.398-1.11-.94l-.213-1.281c-.062-.374-.312-.686-.644-.87a6.52 6.52 0 01-.22-.127c-.325-.196-.72-.257-1.076-.124l-1.217.456a1.125 1.125 0 01-1.369-.49l-1.297-2.247a1.125 1.125 0 01.26-1.431l1.004-.827c.292-.24.437-.613.43-.992a6.932 6.932 0 010-.255c.007-.378-.138-.75-.43-.99l-1.004-.828a1.125 1.125 0 01-.26-1.43l1.297-2.247a1.125 1.125 0 011.37-.491l1.216.456c.356.133.751.072 1.076-.124.072-.044.146-.087.22-.128.332-.183.582-.495.644-.869l.214-1.281z',
  },
];

const testimonials = [
  {
    quote: 'Having previously worked at a major bank, I can say HedgeFlows provides the same institutional-grade tools we used there — but designed for businesses like ours.',
    name: 'Jason',
    role: 'CFO',
    company: 'Niarra Travel',
  },
  {
    quote: 'The visibility HedgeFlows gives us across our entities and currencies has completely changed how we manage our finances. We finally feel in control.',
    name: 'Chris',
    role: 'Managing Director',
    company: 'FirstPoint Logistics',
  },
];
---

<PageLayout
  title="Treasury for Mid-Market Businesses | HedgeFlows"
  description="Expert treasury advisory and full TMS for mid-market businesses. We establish policies, optimise banking, source working capital, and provide the technology to manage it all."
>
  <Hero
    title="Treasury advisory and technology for complex organisations"
    subtitle="Mid-market businesses face institutional-level complexity but rarely have institutional-level support. We start with hands-on advisory — establishing policies, optimising banking, and sourcing working capital — then provide the technology to run it day-to-day."
    primaryCta={{ label: 'Schedule a Consultation', href: '/treasury-health-check' }}
    secondaryCta={{ label: 'See Pricing', href: '/pricing' }}
  >
    <SolutionsScene slot="scene" tier="midmarket" />
  </Hero>

  <TrustBar slider={true} />

  <!-- Pain Points -->
  <section class="section-padding bg-[#F8FAFB]">
    <div class="container-content">
      <div class="text-center mb-14">
        <h2 class="section-heading">Strategy and expertise first, technology to execute</h2>
        <p class="section-subheading mx-auto">We bring the advisory your finance team needs, backed by the platform to put it into action</p>
      </div>
      <div class="grid md:grid-cols-3 gap-8">
        {painPoints.map((s) => (
          <div class="bg-white rounded-2xl border border-gray-100 p-8 shadow-sm">
            <div class="w-12 h-12 rounded-xl bg-brand-green-pale flex items-center justify-center mb-5">
              <svg class="w-6 h-6 text-brand-green" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d={s.icon} />
              </svg>
            </div>
            <h3 class="text-[1.125rem] font-bold text-text-heading mb-3">{s.title}</h3>
            <p class="text-[0.9375rem] text-text-body leading-relaxed">{s.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Advisory Lead -->
  <section class="section-padding">
    <div class="container-content space-y-24">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <div>
          <p class="text-[0.75rem] font-semibold text-brand-green uppercase tracking-wider mb-3">Treasury Advisory</p>
          <h3 class="text-[1.5rem] md:text-[1.75rem] font-bold text-text-heading mb-4 leading-tight">
            Policies, banking, and working capital — designed for your business
          </h3>
          <p class="text-[0.9375rem] text-text-body leading-relaxed mb-6">
            Our advisory team brings 20+ years of institutional experience from Standard Chartered and Bank of America Merrill Lynch. We work alongside your finance team to design treasury policies, restructure banking relationships, and find working capital solutions that actually fit your business — not off-the-shelf templates.
          </p>
          <ul class="space-y-3">
            {['FX risk policy and hedging framework design', 'Banking relationship review and renegotiation', 'Working capital and trade finance solutions', 'Cash management policy across entities and currencies', 'Board-ready treasury reporting and governance'].map((item) => (
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-brand-green flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                </svg>
                <span class="text-[0.9375rem] text-text-body">{item}</span>
              </li>
            ))}
          </ul>
        </div>
        <div class="rounded-2xl overflow-hidden">
          <img src="/assets/images/platform/cashflow-plan.png" alt="Treasury advisory and policy design" class="w-full h-auto" loading="lazy" />
        </div>
      </div>

      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <div class="order-2 lg:order-1 rounded-2xl overflow-hidden">
          <img src="/assets/images/platform/fx-risk-hero.png" alt="Treasury management system" class="w-full h-auto" loading="lazy" />
        </div>
        <div class="order-1 lg:order-2">
          <p class="text-[0.75rem] font-semibold text-brand-green uppercase tracking-wider mb-3">Treasury Management System</p>
          <h3 class="text-[1.5rem] md:text-[1.75rem] font-bold text-text-heading mb-4 leading-tight">
            Then execute with a full TMS and custom integrations
          </h3>
          <p class="text-[0.9375rem] text-text-body leading-relaxed mb-6">
            Once your policies and strategy are in place, our platform operationalises them. Full hedge accounting, multi-entity consolidation, and deep integrations with your ERP, CRM, and BI tools — so your treasury function runs consistently and at scale.
          </p>
          <ul class="space-y-3">
            {['Hedge accounting compliant with IFRS 9 / FRS 102', 'Custom ERP integrations — NetSuite, Business Central, and more', 'Salesforce, HubSpot, and Power BI connectors', 'Working capital management and optimisation', 'Public API for bespoke automations'].map((item) => (
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-brand-green flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                </svg>
                <span class="text-[0.9375rem] text-text-body">{item}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <section class="section-padding bg-[#F8FAFB]">
    <div class="container-content">
      <div class="text-center mb-14">
        <h2 class="section-heading">Trusted by mid-market businesses</h2>
      </div>
      <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        {testimonials.map((t) => (
          <div class="bg-white p-8 rounded-2xl border border-gray-100 shadow-sm">
            <svg class="w-8 h-8 text-brand-green/20 mb-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10H14.017zM0 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151C7.546 6.068 5.983 8.789 5.983 11H10v10H0z"/>
            </svg>
            <p class="text-[0.9375rem] text-text-body leading-relaxed mb-4 italic">"{t.quote}"</p>
            <div>
              <p class="font-semibold text-text-heading text-[0.9375rem]">{t.name}</p>
              <p class="text-[0.8125rem] text-text-muted">{t.role}, {t.company}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <CTASection
    headline="Ready to professionalise your treasury?"
    primaryCta={{ label: 'Schedule a Consultation', href: '/treasury-health-check' }}
    secondaryCta={{ label: 'Learn about our advisory', href: '/advisory' }}
  />
</PageLayout>
