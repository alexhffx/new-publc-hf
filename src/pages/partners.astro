---
import PageLayout from '../layouts/PageLayout.astro';
import Hero from '../components/Hero.astro';
import PageSections from '../components/PageSections.astro';
import CTASection from '../components/CTASection.astro';
import { getPage } from '../lib/sanity';

const page = await getPage('partners');
---

<PageLayout
  title={page?.seoTitle || page?.title || 'Partners'}
  description={page?.seoDescription || 'Partner with HedgeFlows to offer treasury solutions to your clients.'}
>
  <Hero
    title={page?.heroTitle || 'Partner with HedgeFlows'}
    subtitle={page?.heroSubtitle || 'Join our partner programme and help your clients manage international treasury more effectively.'}
    primaryCta={page?.primaryCta}
    secondaryCta={page?.secondaryCta}
  />
  <PageSections sections={page?.sections || []} />
  <CTASection
    headline="Ready to take control of your international finances?"
    primaryCta={{ label: 'Book a Treasury Review', href: '/treasury-health-check' }}
  />
</PageLayout>
