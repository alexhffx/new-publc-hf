---
import PageLayout from '../../layouts/PageLayout.astro';
import Hero from '../../components/Hero.astro';
import PageSections from '../../components/PageSections.astro';
import CTASection from '../../components/CTASection.astro';
import { getPage } from '../../lib/sanity';

const page = await getPage('advisory/working-capital');
---

<PageLayout
  title={page?.seoTitle || page?.title || 'Working Capital'}
  description={page?.seoDescription || 'Bank and non-bank facilities to fund your business growth.'}
>
  <Hero
    title={page?.heroTitle || 'Bank and non-bank facilities to fund growth'}
    subtitle={page?.heroSubtitle || 'Access the right funding structures to support your international trade and business expansion.'}
    primaryCta={page?.primaryCta}
    secondaryCta={page?.secondaryCta}
  />
  <PageSections sections={page?.sections || []} />
  <CTASection
    headline="Ready to take control of your international finances?"
    primaryCta={{ label: 'Book a Treasury Review', href: '/treasury-health-check' }}
  />
</PageLayout>
