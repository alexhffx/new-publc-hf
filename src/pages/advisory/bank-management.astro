---
import PageLayout from '../../layouts/PageLayout.astro';
import Hero from '../../components/Hero.astro';
import PageSections from '../../components/PageSections.astro';
import CTASection from '../../components/CTASection.astro';
import { getPage } from '../../lib/sanity';

const page = await getPage('advisory/bank-management');
---

<PageLayout
  title={page?.seoTitle || page?.title || 'Bank Management'}
  description={page?.seoDescription || 'Establish and manage the right banking relationships for your business.'}
>
  <Hero
    title={page?.heroTitle || 'Establish and manage the right banking relationships'}
    subtitle={page?.heroSubtitle || 'Expert guidance on selecting, onboarding, and managing banking partners for international businesses.'}
    primaryCta={page?.primaryCta}
    secondaryCta={page?.secondaryCta}
  />
  <PageSections sections={page?.sections || []} />
  <CTASection
    headline="Ready to take control of your international finances?"
    primaryCta={{ label: 'Book a Treasury Review', href: '/treasury-health-check' }}
  />
</PageLayout>
