---
import PageLayout from '../../layouts/PageLayout.astro';
import Hero from '../../components/Hero.astro';
import PageSections from '../../components/PageSections.astro';
import CTASection from '../../components/CTASection.astro';
import { getPage } from '../../lib/sanity';

const page = await getPage('advisory/digitalisation');
---

<PageLayout
  title={page?.seoTitle || page?.title || 'Digitalisation'}
  description={page?.seoDescription || 'Automate treasury with controls and audit trails.'}
>
  <Hero
    title={page?.heroTitle || 'Automate treasury with controls and audit trails'}
    subtitle={page?.heroSubtitle || 'Modernise your treasury operations with digital tools, automated workflows, and robust audit capabilities.'}
    primaryCta={page?.primaryCta}
    secondaryCta={page?.secondaryCta}
  />
  <PageSections sections={page?.sections || []} />
  <CTASection
    headline="Ready to take control of your international finances?"
    primaryCta={{ label: 'Book a Treasury Review', href: '/treasury-health-check' }}
  />
</PageLayout>
