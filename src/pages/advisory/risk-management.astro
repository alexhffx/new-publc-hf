---
import PageLayout from '../../layouts/PageLayout.astro';
import Hero from '../../components/Hero.astro';
import PageSections from '../../components/PageSections.astro';
import CTASection from '../../components/CTASection.astro';
import { getPage } from '../../lib/sanity';

const page = await getPage('advisory/risk-management');
---

<PageLayout
  title={page?.seoTitle || page?.title || 'Risk Management'}
  description={page?.seoDescription || 'FX hedging, credit risk, and counterparty management for international businesses.'}
>
  <Hero
    title={page?.heroTitle || 'FX hedging, credit risk, counterparty management'}
    subtitle={page?.heroSubtitle || 'Identify, measure, and mitigate financial risks across your international operations.'}
    primaryCta={page?.primaryCta}
    secondaryCta={page?.secondaryCta}
  />
  <PageSections sections={page?.sections || []} />
  <CTASection
    headline="Ready to take control of your international finances?"
    primaryCta={{ label: 'Book a Treasury Review', href: '/treasury-health-check' }}
  />
</PageLayout>
