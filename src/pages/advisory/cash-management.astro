---
import PageLayout from '../../layouts/PageLayout.astro';
import Hero from '../../components/Hero.astro';
import PageSections from '../../components/PageSections.astro';
import CTASection from '../../components/CTASection.astro';
import { getPage } from '../../lib/sanity';

const page = await getPage('advisory/cash-management');
---

<PageLayout
  title={page?.seoTitle || page?.title || 'Cash Management'}
  description={page?.seoDescription || 'Meet investor and audit requirements while earning interest on your cash.'}
>
  <Hero
    title={page?.heroTitle || 'Meet investor and audit requirements while earning interest'}
    subtitle={page?.heroSubtitle || 'Optimise your cash positions, meet compliance requirements, and maximise returns on idle funds.'}
    primaryCta={page?.primaryCta}
    secondaryCta={page?.secondaryCta}
  />
  <PageSections sections={page?.sections || []} />
  <CTASection
    headline="Ready to take control of your international finances?"
    primaryCta={{ label: 'Book a Treasury Review', href: '/treasury-health-check' }}
  />
</PageLayout>
