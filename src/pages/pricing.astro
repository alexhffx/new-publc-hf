---
import PageLayout from '../layouts/PageLayout.astro';
import Hero from '../components/Hero.astro';
import PageSections from '../components/PageSections.astro';
import CTASection from '../components/CTASection.astro';
import { getPage } from '../lib/sanity';

const page = await getPage('pricing');
---

<PageLayout
  title={page?.seoTitle || page?.title || 'Pricing'}
  description={page?.seoDescription || 'Transparent pricing for HedgeFlows advisory and platform services.'}
>
  <Hero
    title={page?.heroTitle || 'Transparent pricing for advisory and platform'}
    subtitle={page?.heroSubtitle || 'Simple, clear pricing with no hidden fees. Choose the plan that fits your business.'}
    primaryCta={page?.primaryCta}
    secondaryCta={page?.secondaryCta}
  />
  <PageSections sections={page?.sections || []} />
  <CTASection
    headline="Ready to take control of your international finances?"
    primaryCta={{ label: 'Book a Treasury Review', href: '/treasury-health-check' }}
  />
</PageLayout>
