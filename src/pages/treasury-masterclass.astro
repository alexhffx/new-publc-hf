<script is:inline>
(function() {
  var form = document.getElementById('masterclass-waitlist-form');
  if (!form) return;

  form.addEventListener('submit', async function(e) {
    e.preventDefault();

    var formEl = e.target;
    var portalId = formEl.dataset.portalId;
    var formId = formEl.dataset.formId;

    var btnText = formEl.querySelector('.btn-text');
    var btnLoading = formEl.querySelector('.btn-loading');
    var errorEl = formEl.querySelector('.form-error');
    var submitBtn = formEl.querySelector('button[type="submit"]');

    // Show loading
    btnText.classList.add('hidden');
    btnLoading.classList.remove('hidden');
    submitBtn.disabled = true;
    errorEl.classList.add('hidden');

    var data = new FormData(formEl);

    // Build HubSpot fields array
    var fields = [];
    for (var pair of data.entries()) {
      fields.push({ name: pair[0], value: pair[1].toString() });
    }

    var payload = {
      fields: fields,
      context: {
        pageUri: window.location.href,
        pageName: document.title
      }
    };

    try {
      var response = await fetch(
        'https://api.hsforms.com/submissions/v3/integration/submit/' + portalId + '/' + formId,
        {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(payload)
        }
      );

      if (response.ok) {
        // Success — show success state
        document.getElementById('masterclass-form').classList.add('hidden');
        document.getElementById('masterclass-success').classList.remove('hidden');
      } else {
        throw new Error('Submission failed');
      }
    } catch(err) {
      errorEl.textContent = 'Something went wrong. Please try again or email us at hello@hedgeflows.com.';
      errorEl.classList.remove('hidden');
    } finally {
      btnText.classList.remove('hidden');
      btnLoading.classList.add('hidden');
      submitBtn.disabled = false;
    }
  });
})();
</script>
