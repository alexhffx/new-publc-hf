---
import '../styles/global.css';
import CookieConsent from '../components/CookieConsent.astro';

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  ogType?: string;
  canonicalUrl?: string;
  noIndex?: boolean;
}

const {
  title = 'HedgeFlows — Treasury Advisory & Technology',
  description = 'Expert treasury advisory and technology for businesses that trade internationally. FX risk management, cash management, and payments automation — without the cost of a full treasury function.',
  ogImage = '/og-default.png',
  ogType = 'website',
  canonicalUrl,
  noIndex = false,
} = Astro.props;

const siteUrl = 'https://hedgeflows.com';
const pageTitle = title.includes('HedgeFlows') ? title : `${title} | HedgeFlows — Treasury Advisory & Technology`;
const canonical = canonicalUrl || new URL(Astro.url.pathname, siteUrl).href;
const ogImageUrl = ogImage.startsWith('http') ? ogImage : new URL(ogImage, siteUrl).href;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/png" href="/favicon.png" />

    <!-- SEO -->
    <title>{pageTitle}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonical} />
    {noIndex && <meta name="robots" content="noindex, nofollow" />}

    <!-- Open Graph -->
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content={ogType} />
    <meta property="og:url" content={canonical} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:site_name" content="HedgeFlows" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl} />

    <!-- Structured Data (Homepage) -->
    {Astro.url.pathname === '/' && (
      <script type="application/ld+json" set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "HedgeFlows",
        "url": siteUrl,
        "logo": `${siteUrl}/logos/hf-logo-green.svg`,
        "description": description,
        "sameAs": [
          "https://www.linkedin.com/company/hedgeflows",
          "https://www.youtube.com/@hedgeflows"
        ]
      })} />
    )}
  </head>
  <body>
    <slot />
    <CookieConsent />

    <!-- Google Analytics 4 — consent-gated (analytics category) -->
    <script is:inline>
    (function() {
      var GA_ID = 'G-L12D7J2N6C';
      var STORAGE_KEY = 'hf-cookie-consent';

      function loadGA() {
        if (document.querySelector('script[src*="googletagmanager"]')) return;
        var s = document.createElement('script');
        s.src = 'https://www.googletagmanager.com/gtag/js?id=' + GA_ID;
        s.async = true;
        document.head.appendChild(s);
        window.dataLayer = window.dataLayer || [];
        function gtag() { window.dataLayer.push(arguments); }
        window.gtag = gtag;
        gtag('js', new Date());
        gtag('config', GA_ID, { anonymize_ip: true });
      }

      // Check existing consent on page load
      try {
        var consent = JSON.parse(localStorage.getItem(STORAGE_KEY));
        if (consent && consent.analytics) loadGA();
      } catch(e) {}

      // Listen for consent changes
      window.addEventListener('hf:consent', function(e) {
        if (e.detail && e.detail.analytics) loadGA();
      });
    })();
    </script>

    <!-- Microsoft Clarity — consent-gated (analytics category) -->
    <script is:inline>
    (function() {
      var CLARITY_ID = 'vka6bmib2n';
      var STORAGE_KEY = 'hf-cookie-consent';

      function loadClarity() {
        if (window.clarity) return;
        (function(c,l,a,r,i,t,y){
          c[a]=c[a]||function(){(c[a].q=c[a].q||[]).push(arguments)};
          t=l.createElement(r);t.async=1;t.src="https://www.clarity.ms/tag/"+i;
          y=l.getElementsByTagName(r)[0];y.parentNode.insertBefore(t,y);
        })(window, document, "clarity", "script", CLARITY_ID);
      }

      // Check existing consent on page load
      try {
        var consent = JSON.parse(localStorage.getItem(STORAGE_KEY));
        if (consent && consent.analytics) loadClarity();
      } catch(e) {}

      // Listen for consent changes
      window.addEventListener('hf:consent', function(e) {
        if (e.detail && e.detail.analytics) loadClarity();
      });
    })();
    </script>

    <!-- Tidio Chat — consent-gated (marketing category) -->
    <script is:inline>
    (function() {
      var STORAGE_KEY = 'hf-cookie-consent';

      function loadTidio() {
        if (document.querySelector('script[src*="tidio"]')) return;
        var s = document.createElement('script');
        s.src = '//code.tidio.co/m8zlba8jlop0bfonjnfjv3uaki2pacfr.js';
        s.async = true;
        document.body.appendChild(s);
      }

      // Check existing consent on page load
      try {
        var consent = JSON.parse(localStorage.getItem(STORAGE_KEY));
        if (consent && consent.marketing) loadTidio();
      } catch(e) {}

      // Listen for consent changes
      window.addEventListener('hf:consent', function(e) {
        if (e.detail && e.detail.marketing) loadTidio();
      });
    })();
    </script>
  </body>
</html>
