---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  ogType?: string;
  canonicalUrl?: string;
  noIndex?: boolean;
}

const props = Astro.props;
---

<BaseLayout {...props}>
  <Header />
  <main>
    <slot />
  </main>
  <Footer />
</BaseLayout>
